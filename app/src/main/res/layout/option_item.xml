<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/option_symbol"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="Symbol"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/option_type"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/s_op"
        android:layout_toRightOf="@+id/s_op"
        android:gravity="center_horizontal"
        android:text="Type"
        android:textColor="#000"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/option_price"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:text="Price"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/option_position"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:text="Position"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/option_date"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:text="Expiration data"
        android:textColor="#000"
        android:textSize="18sp" />

</LinearLayout>